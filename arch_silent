#1 connect to internet(using iwctl, nmcli, nmtui,...)
# run as root
pacman -Sy ;
fdisk -l ;
read -p "Enter your disk partitions(sda or sdb,..):" disk ;
cfdisk /dev/$disk && sleep 5 ;
echo "you need to create at least 2 partitions: boot & data" ;
sleep 5 ; 
read -p "Enter your boot partitions(sda1 or sdb1,..):" boot ;
mkfs.fat -F32 /dev/$boot ;
read -p "Enter your data partitions(sda1 or sdb1,..):" data ;
mkfs.ext4 /dev/$data ;
mount /dev/$data /mnt ;
pacstrap /mnt base linux linux-firmware sudo nano git base-devel ;
